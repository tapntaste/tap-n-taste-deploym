{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "strict": false,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "outDir": "dist/tap-n-taste-api",  // Specify output directory
    "target": "ES6",                  // Target modern JavaScript version
    "module": "CommonJS"              // Use CommonJS modules for Node.js
  },
  "include": [
    "src/**/*"                         // Include all files in the src directory
  ]
}
